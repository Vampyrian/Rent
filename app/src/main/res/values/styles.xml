<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>





    //****************Tekstas viduryje recycleView
    <style name="RowTextView.Word">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RowTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    //*****************Tekstas mokinimosi ir testuose
    <style name="EditText.Word">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">32sp</item>
    </style>

    //************************************************************
    <style name="TextView.Antraste">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextView.PlainTextInRow">
        <item name="android:textColor">@color/navigationView_icon_and_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">32sp</item>
    </style>

    //******************Mygtukai gerai ir blogai
    <style name="Button.True">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="Button.False">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="Button.SignIn">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Button">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">142dp</item>
        <item name="android:layout_height">49dp</item>
    </style>


    <style name="ImageButtonInRow">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>


</resources>
